{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "ami_regions": [ "us-west-1", "eu-west-1" ],
    "source_ami": "ami-d85e75b0",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ami_name": "chefdk-fundamentals-3.0.0"
  }],

  "provisioners": [{
    "type": "chef-solo",
    "install_command": "curl -L https://www.chef.io/chef/install.sh | {{if .Sudo}}sudo{{end}} bash -s -- -P chefdk",
    "cookbook_paths": ["cookbooks"],
    "run_list": ["fundamentals::default"]

  }]
}
